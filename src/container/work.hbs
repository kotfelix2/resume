{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data='Work history' big=true }}
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div>{{position}}</div>

                                <br>

                                <div>
                                    {{duration.from}} - 
                                    {{#if duration.to}} 
                                        {{duration.to}} 
                                    {{else}} 
                                        (досі працюю) 
                                    {{/if}}
                                </div>

                                <br>

                                <div>
                                    {{#if company.url}} 
                                        {{> link text=company.name href=company.url blank=true noLine=true}}
                                    {{else}} 
                                        <b>{{company.name}}</b> 
                                    {{/if}}
                                    </div>

                                <br>
                                <br>

                                <div>
                                    <strong>Projects ({{projectAmount}})</strong>
                                </div>

                                <br>

                                <ul>
                                    {{#each projects}}
                                    <li>
                                        <div>
                                            {{> link text=name href=url blank=true noLine=true}}
                                        <p>{{about}}</p>
                                        </div>

                                        <br>

                                        <div>
                                            <em>Stack</em> ({{stackAmount}})
                                            <br>
                                            <ul>
                                                {{#each stack}}
                                                <li>
                                                    {{name}}
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>

                                        <br>

                                        <div>
                                            <em>Awards</em> ({{awardAmount}})
                                            <br>
                                            <ul>
                                                {{#each awards}}
                                                <li>
                                                    {{name}}
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                    </li>
                                    <br>
                                    {{/each}}
                                </ul>
                            </li>
                            <br>
                        {{/each}}
                    </ul>
                </div>
            </section>
        </main>
    {{/with}}
</div>

