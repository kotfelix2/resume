<section class='card col-12 p-0 pb-2 mb-5'>
  <section class='card col-12 p-0 mb-4'>
    {{#with title}}
      <div class='col-12'>
        <div class='card-body'>
          <h5 class='card-title'>{{userName}} </h5>
          <h6
            class='card-subtitle mb-2 text-body-secondary'
          >{{caption}} </h6>
          <p class='card-text'>{{date}} </p>
        </div>
      </div>
    {{/with}}
    <hr />

    {{#with reviewBody}}
      <div class='col-12'>
        <div class='card-body'>
          <h6
            class='card-subtitle mb-2 text-body-secondary'
          >{{seller.title}}: {{seller.value}}</h6>
          <p class='card-text'>{{rating.title}}:
            {{rating.value}}
          </p>
          {{#each text}}
            <p class='card-text'>{{this}}</p>
          {{/each}}

          {{#with advantages}}
            <h6 class='card-subtitle mb-2 text-body-dark'><b
              >{{title}}:</b></h6>
            <p class='card-text'>{{text}}</p>
          {{/with}}

          {{#with disadvantages}}
            <h6 class='card-subtitle mb-2 text-body-dark'><b
              >{{title}}:</b></h6>
            <p class='card-text'>{{text}}</p>
          {{/with}}

          <div class='row col-12'>
            {{#each images}}
              <img class='col-2' src='{{this}}' />
            {{/each}}
          </div>

        </div>
      </div>
    {{/with}}
  </section>

  {{#each reviewBody.coments}}
    <div class='card m-5 my-2 col-11 p-1'>
      <h5 class='card-title'>{{userName}} </h5>
      <p class='card-text'>{{date}} </p>
      <p class='card-text'>{{text}} </p>
    </div>
  {{/each}}
</section>